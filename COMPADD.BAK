#include<iostream.h>
#include<conio.h>
class complex
{
 private:
  int x,y,a,b,i,j;
 public:
  void input();
  void calc();
  void disp();
};
void complex::input()
{
 cout<<"Enter the real part of 1st complex no.=";
 cin>>x;
 cout<<"Enter the imaginary part of 1st complex no.=";
 cin>>y;
 cout<<"\nEnter the real part of 2nd complex no.=";
 cin>>a;
 cout<<"Enter the imaginary part of 2nd complex no.=";
 cin>>b;
}
void complex::calc()
{
 i=x+a;
 j=y+b;
}
void complex::disp()
{
 cout<<"\nThe addition of two complex nos is = "<<i<<"+i"<<j;
}
